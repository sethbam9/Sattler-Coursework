<Button>: #parent tag: all following buttons inherit the properties
    font_size: 40
    color:0.3,0.6,0.7,1
    size_hint: 0.3, 0.5 # width and height


<FloatLayout>:
    Button:
        pos_hint: {"x":0.5, "top":1} #, "y" "bottom", "left", "right"}
            #top references the top left of our button.
            #y from bottom left
        text: "tech"

    Button:
        id: btn
        pos_hint: {"y":0.3}
        text: "tim" if btn.state == "normal" else "Down"
        background_color: 0.1,0.9,0.4,1
